<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res/com.gtotek.imedia"
    android:id="@+id/ll_home_actionbar_layout"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="#2E2E2E"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/btn_menu_toogle"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:contentDescription="@string/app_name"
        android:src="@drawable/btn_menu_drawer" />

    <com.gtotek.imedia.customview.FontTextView
        android:id="@+id/tvChanelTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/tv_chanel_title"
        android:textColor="#ffffff"
        android:textSize="20sp"
        app:textfont="myriadbold" />

</LinearLayout>