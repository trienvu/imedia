<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relChannelItem"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="1dp"
    android:background="@drawable/round_channel_selector"
    android:padding="3dp" >

    <ImageView
        android:id="@+id/imgChanelLogo"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/app_name"
        android:padding="3dip"
        android:scaleType="fitXY"
        android:src="@drawable/ic_app" />

    <LinearLayout
        android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imgChanelLogo"
        android:layout_alignRight="@+id/imgChanelLogo"
        android:layout_below="@+id/imgChanelLogo"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="3dip" >

        <!-- Name Of Chanel -->

        <TextView
            android:id="@+id/tvChanelName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#040404"
            android:lines="2"
            android:textSize="15sp"
            android:textStyle="bold"
            android:typeface="sans" />

        <!-- Desc Of Chanel -->

        <TextView
            android:id="@+id/tvChanelDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dip"
            android:lines="2"
            android:textColor="#343434"
            android:textSize="12sp"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>